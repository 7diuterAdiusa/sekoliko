{% extends 'admin/_base_admin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                    <h4 class="c-grey-900 mB-20 ">Types d'administrations</h4>
                    <a href="{{ path('administration_type_manage') }}" class="btn btn-primary">Nouveau</a>
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Libelle</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for type in types %}
                            <tr>
                                <td>{{ type.libelle }}</td>
                                <td>
                                    <a href="{{ path('administration_type_manage',{'id':type.id}) }}">
                                        <i class="ti-pencil"></i>
                                    </a>
                                    <a href="{{ path('administration_type_delete',{'id':type.id}) }}">
                                        <i class="ti-trash"></i>
                                    </a>
                                </td>
                            </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}