{% extends 'admin/_base_admin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <h4 class="c-grey-900 mB-20 ">Administrations</h4>
                <a href="{{ path('administrator_manage') }}" class="btn btn-primary">Nouveau</a>
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Roles</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Roles</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for admin in admins %}
                        <tr>
                            <td>{{ admin.user.nom }}</td>
                            <td>{{ admin.type }}</td>
                            <td>
                                <a href="{{ path('administrator_manage',{'id':admin.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                                <a href="{{ path('administrator_manage',{'id':admin.id}) }}">
                                    <i class="ti-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}